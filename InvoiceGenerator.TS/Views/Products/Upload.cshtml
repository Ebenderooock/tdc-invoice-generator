@model InvoiceGenerator.Core.ViewModels.Products.UploadProductViewModel
@{
    ViewBag.Title = "Upload Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
}
<div class="row">
    <div class="col-12 mt-3">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("Upload", "Products", FormMethod.Post, new { enctype = "multipart/form-data", id = "UploadProductsForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="form-group col-lg-12 col-md-12 col-sm-12">
                            @Html.LabelFor(model => model.File)
                            <div class="custom-file overflow-hidden">
                                <input id="File" type="file" class="custom-file-input" name="File">
                                <label for="File" class="custom-file-label">Choose file</label>
                            </div>
                            @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 mt-4">
                            <button type="submit" class="btn btn-primary" id="FormSubmit"><i class="far fa-save"></i> Upload</button>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/js/products/upload")
}