@model InvoiceGenerator.Core.ViewModels.Products.DeleteProductViewModel
@{
    ViewBag.Title = "Delete Product";
    ViewBag.Name = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <link rel="stylesheet" type="text/css" href="~/Content/css/alert.css">
}
<div class="row">
    <div class="col-12 mt-3">
        <div class="alert alert-danger" role="alert">
            <span class="alert-link">Alert!</span> Are you sure you want to delete this product - @Model.Name?
        </div>
    </div>
    <div class="col-12 mt-3">
        <div class="card border-danger">
            <div class="card-content">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-row">
                                <div class="form-group col-lg-6 col-md-12 col-sm-12 mb-3">
                                    @Html.LabelFor(model => model.Code)
                                    @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                                <div class="form-group col-lg-6 col-md-12 col-sm-12 mb-3">
                                    @Html.LabelFor(model => model.Name)
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-12 mt-4">
                            @using (Html.BeginForm("Delete", "Products", FormMethod.Post, new { id = "DeleteProductForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger" id="FormSubmit"><i class="fas fa-trash-alt"></i> Delete</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/js/products/delete")
}