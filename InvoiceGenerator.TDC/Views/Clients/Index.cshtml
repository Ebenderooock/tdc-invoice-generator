@using InvoiceGenerator.Core.Models
@model IEnumerable<InvoiceGenerator.Core.Models.Client>
@{
    ViewBag.Title = "Clients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    @Styles.Render("~/css/datatable")
}
<div class="row">
    <div class="col-12 mt-3">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive mb-4 mt-4">
                    <table id="clientsTable" class="display table dataTable table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.AccountNumber)</th>
                                <th>@Html.DisplayNameFor(model => model.Address)</th>
                                <th>@Html.DisplayNameFor(model => model.ContactPersonName)</th>
                                <th>@Html.DisplayNameFor(model => model.ContactPersonPhoneNumber)</th>
                                <th class="no-content"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Client item in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.AccountNumber)</td>
                                <td>
                                    @if (item.Address == "None Provided")
                                    {
                                    <span class="badge p-2 outline-badge-danger mb-1">None Provided</span>
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.Address)
                                    }
                                </td>
                                <td>
                                    @if (item.ContactPersonName == "None Provided")
                                    {
                                    <span class="badge p-2 outline-badge-danger mb-1">None Provided</span>
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.ContactPersonName)
                                    }
                                </td>
                                <td>
                                    @if (item.ContactPersonPhoneNumber == "None Provided")
                                    {
                                        <span class="badge p-2 outline-badge-danger mb-1">None Provided</span>
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.ContactPersonPhoneNumber)
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning"><i class="fas fa-pen"></i> Edit</a>
                                    <a href="@Url.Action("Details", new { id = item.Id} )" class="btn btn-info"><i class="fas fa-eye"></i> Details</a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.AccountNumber)</th>
                                <th>@Html.DisplayNameFor(model => model.Address)</th>
                                <th>@Html.DisplayNameFor(model => model.ContactPersonName)</th>
                                <th>@Html.DisplayNameFor(model => model.ContactPersonPhoneNumber)</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/js/datatable")
    @Scripts.Render("~/js/clients/index")
}
