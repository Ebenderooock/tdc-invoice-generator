@using TDC_Invoice_Generator.Helper
@using TDC_Invoice_Generator.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    string logoCenterUrl = Settings.LogoCenterUrl;
}
<div class="col-12">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "row row-eq-height lockscreen mt-5 mb-5", role = "form" }))
    {
        @Html.AntiForgeryToken() <div class="login-form col-12 col-sm-12 col-md-8 offset-md-2 text-center">
            <div>
                <img src="@logoCenterUrl" title="@Settings.CompanyName" alt="Technology Driven Concepts" style="width: 100%;" />
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group mb-3 mt-3">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-0 mt-5">
                <button class="btn btn-primary" type="submit"> Log In </button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}