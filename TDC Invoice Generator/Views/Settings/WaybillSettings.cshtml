@model TDC_Invoice_Generator.ViewModels.Settings.WaybillSettingtViewModel
@{
    ViewBag.Title = "Waybill Number Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
}
<div class="row">
    <div class="col-12 mt-3">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("WaybillSettings", "Settings", FormMethod.Post, new { id = "EditWaybillNumberSettingsForm", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="form-group col-lg-12 col-md-12 col-sm-12">
                            @Html.LabelFor(model => model.LastWaybillNumber)
                            @Html.EditorFor(model => model.LastWaybillNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Waybill Number" } })
                            @Html.ValidationMessageFor(model => model.LastWaybillNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 mt-4">
                            <button type="submit" class="btn btn-primary" id="FormSubmit"><i class="far fa-save"></i> Save</button>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
